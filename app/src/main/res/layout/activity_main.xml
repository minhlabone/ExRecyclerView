<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
  <EditText
      android:hint="Search Contact"
      android:drawableEnd="@drawable/loupe"
      android:layout_marginTop="10dp"
      android:padding="10dp"
      android:background="@drawable/bg_search"
      android:id="@+id/edt_search"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
 <androidx.recyclerview.widget.RecyclerView
     app:layout_constraintTop_toBottomOf="@id/edt_search"
     tools:listitem="@layout/item_letter"
     android:id="@+id/recyclerView"
     app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:paddingBottom="70dp"
     app:layout_constraintBottom_toBottomOf="parent"
     />
   <View
       android:background="#C3EAEF"
       android:id="@+id/viewww"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_width="match_parent"
       android:layout_height="70dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_deleteItem"
      android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#C3EAEF"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:textColor="#EC564B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:drawableEnd="@drawable/empty"
        android:drawablePadding="10dp"
        android:id="@+id/btn_select_all_item"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#C3EAEF"
        android:text="Select"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>